
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// 1. AUTH (Gestion des Utilisateurs)
model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String   // Hashed password
  role      Role     @default(EDITOR)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  EDITOR
}

// 2. CMS CONTENT (Contenu Bilingue)

// Représente le contenu statique des pages (Hero, CTA, etc.)
model PageContent {
  id         String   @id @default(cuid())
  pageKey    String   // ex: 'home'
  sectionKey String   // ex: 'hero'
  key        String   // ex: 'title'
  contentFr  String
  contentEn  String
  updatedAt  DateTime @updatedAt

  @@unique([pageKey, sectionKey, key])
}

// Représente les articles de blog (Insights)
model BlogPost {
  id          String   @id @default(cuid())
  slug        String   @unique
  titleFr     String
  titleEn     String
  summaryFr   String
  summaryEn   String
  contentFr   String
  contentEn   String
  coverImage  String?
  category    Category @default(STRATEGY)
  author      String?  // Nom de l'auteur (ou relation User si besoin)
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Category {
  STRATEGY
  IA
  DIGITAL
  HR
}

// Représente l'équipe
model TeamMember {
  id          String   @id @default(cuid())
  name        String
  roleFr      String
  roleEn      String
  bioFr       String?
  bioEn       String?
  photoUrl    String?
  linkedinUrl String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// 3. CRM & LEADS (Conversion)

model Lead {
  id              String       @id @default(cuid())
  name            String
  email           String
  phone           String?
  company         String?
  companySize     String?
  serviceInterest String?
  status          LeadStatus   @default(NEW)
  quizResults     QuizResult[]
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}

model QuizResult {
  id          String   @id @default(cuid())
  leadId      String
  lead        Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  scoreValue  Int
  answersJson Json     // Stockage flexible des réponses détaillées
  createdAt   DateTime @default(now())
}

enum LeadStatus {
  NEW
  CONTACTED
  ARCHIVED
}

// 4. GLOBAL SETTINGS

model SiteSettings {
  id           String   @id @default(cuid())
  siteName     String   @default("Krinch & Partners")
  contactEmail String
  contactPhone String?
  addressFr    String?
  addressEn    String?
  socialLinks  Json?    // { linkedin: "url", etc. }
  updatedAt    DateTime @updatedAt
}
